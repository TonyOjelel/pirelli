// MAIN
main
  .container-fluid.my-5(style='background:linear-gradient(to bottom,rgba(42, 192, 35),rgba(61, 237, 72),rgba(42, 192, 35)); border-radius: 5px; padding: 10 20px; transform:translateY(40px); padding-bottom:45px;')
    .row.justify-content-center.align-items-center.g-2.my-5
      .col.my-5(style='transform:translateX(80px) ;') 
        h2.description(style='font-size:45px; margin-top:-135px; padding:12px; font-family: Helvetica; font-weight: 900; color: rgb(210, 23, 23); margin-bottom:185px;') For Poultry Produce only.
        .row
              if poultryGoods.length
                each poultryGood in poultryGoods
                    if poultryGood.availability == 'Available' && poultryGood.status == 'Approved' && poultryGood.prodCategory == 'Poultry'
                      .col-md-4
                          .card(style='width: 22rem;')
                              img(src="/"+poultryGood.prodImage, alt="Image")
                              .card-body(style='margin-bottom:56px;')
                                h5.card-title #{poultryGood.prodName} #{new Intl.NumberFormat().format(poultryGood.price)} UGX  
                                p(style='margin-top:-16px; color:yellow; font-size:20px; font-weight:900;') Available
                                a.btn-2.mr-2(href='/produce/order/'+poultryGood._id)
                                  i.fas.fa-link
                                  span
                                  | Order
