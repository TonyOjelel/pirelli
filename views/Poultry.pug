        img.logo(src='Img/favicon.png')
        p.title(style='transform:translateX(-380px);') Ufarm Project
        .logo-list(style='transform:translateX(-100px);')
          ul
            li
              a.btn.text-secondary(href='/home' type='button') Home
            li
              a(href='/carAccess') Careers
            li
              a#dropdownId.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-haspopup='true' aria-expanded='false') Products
              .dropdown-menu.bg-dark(aria-labelledby='dropdownId')
                a.dropdown-item(href='/horticulture' style='color:teal ;') Horticulture
                a.dropdown-item(href='/poultry' style='color:teal ;') Poultry
                a.dropdown-item(href='/dairy' style='color:teal ;') Dairy
            li
