  style.
    body {
    background:linear-gradient(90deg,rgba(2, 42, 1, 0.9),rgba(29, 133, 23, 0.67));
    background-size: cover;
    font-family: 'Varela Round', sans-serif;
    }

    .container{
      display:flex;
     justify-content:center;
    }
    .descrip{
    margin: auto;
    width: 98%;
    padding: 25px;
    background: rgb(12, 12, 12,0.5);
    }
    .descrip,h1 , h3{
    font-size: 55px;
    color: rgb(255, 255, 255,0.8);
    }
    .card {
      text-align:center;
    text-decoration: none; 
    height: 40vh;
    background: linear-gradient(rgb(0, 175, 152),rgb(1, 189, 164));
    border: 2px solid rgba(195, 34, 210, 0.78);
    box-shadow:2px 2px 4px 5px rgba(94, 22, 94, 0.56);
    color: rgba(250, 250, 250);
    //-transform: translateY(15%);
    }
    img{
     height:25rem;
    border-radius: 5px;
    }
    .card-title{
    transform: translateY(-12px);
    font-weight: 900;
    }
    .btn-2 {
    margin-right: 24px;
    background:rgb(0, 136, 123,0.4);
    font-weight:700;
    width: 100%;
    height: 3hv;
    border-radius: 8px;
    border: 2px solid rgb(102, 18, 94);
    transition:ease-in-out 0.5s;
    padding: 16px;
    background: rgba(130, 17, 119, 0.8);
    transform: translateY(60px);
    overflow: hidden;
    position: relative;
    color: white;
    cursor: pointer;
    }
    span{
    border-radius: 8px;
    background: #2ff15c;
    width: 0;
    height: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: -1;
    transition: 0.5s;
    }

    .btn-2:hover span{
    width: 100%;
    }

    .btn-2:hover{
    text-decoration: none;
    border: none;
    color: #100e11;
    }
    h5{
      font-size: 42px;
    }
